<div class="card">
<div class="card-body">
  <!--convert it to a registration form-->
  <!--Create all the required input fields-->
<form action="/registration" method="POST" name="user">
    <div class="form-group text-dark">
      <label for="firstname">First Name</label>
      <input type="text" name="firstname" class="form-control" aria-describedby="firstName">
    </div>
    <div class="form-group text-dark">
      <label for="lastname">Last Name</label>
      <input type="text" name="lastname" class="form-control" aria-describedby="lastName">
    </div>
    <div class="form-group text-dark">
        <label for="address">Address</label>
        <input type="text" name="address" class="form-control" aria-describedby="address">
    <div>
    <div class="form-group text-dark">
        <label for="city">City</label>
        <input type="text" name="city" class="form-control" aria-describedby="city">
    <div>
    <div class="form-group text-dark">
        <label for="state">State</label>
        <input type="text" name="state" class="form-control" aria-describedby="state">
    <div>
    <div class="form-group text-dark">
        <label for="zip">Zip</label>
        <input type="text" name="zip" class="form-control" aria-describedby="zip">
    <div>
    <div class="form-group text-dark">
      <label for="age">Choose age range:</label>
      <select class="form-control" name="age">
        <option value="choose">Choose</option>
        <option value="child">0-12</option>
        <option value="adolescent">13-17</option>
        <option value="adult">18-59</option>
        <option value="senior">60-120</option>
        <option value="dead">dead</option>
      </select>
    </div>
    <div class="form-check text-dark">
      <input class="form-check-input" type="radio" name="gender" value="male">
      <label class="form-check-label" for="gender">
        Male
      </label>
    </div>
  <div class="form-check text-dark">
    <input class="form-check-input" type="radio" name="gender" value="female">
    <label class="form-check-label" for="gender">
      Female
    </label>
  </div>
  <div class="form-group form-check text-dark">
    <input type="checkbox" class="form-check-input" value="consent">
    <label class="form-check-label" for="exampleCheck1">I give consent for something.</label>
  </div>
  <div class="form-group text-dark">
    <label for="bio">Bio</label>
    <textarea class="form-control" name="bio" rows="3"></textarea>
  </div>
  <div class="form-group text-dark">
      <label for="email">Email</label>
      <input type="email" name="email" class="form-control" aria-describedby="email">
  <div>
  <div class="form-group text-dark">
      <label for="password">Password</label>
      <input type="text" name="password" class="form-control" aria-describedby="password">
  <div>
    <input type="submit" class="btn btn-primary">
</form>
</div>
